  tput sgr0; # reset colors
  BOLD=$(tput bold);
  RESET=$(tput sgr0);
  BLACK=$(tput setaf 0);
  BLUE=$(tput setaf 33);
  CYAN=$(tput setaf 37);
  GREEN=$(tput setaf 64);
  ORANGE=$(tput setaf 166);
  PURPLE=$(tput setaf 125);
  RED=$(tput setaf 124);
  VIOLET=$(tput setaf 61);
  WHITE=$(tput setaf 15);
  YELLOW=$(tput setaf 136);
else
  BOLD='';
  RESET="\e[0m";
  BLACK="\e[1;30m";
